import "std";

// 1. Define the type of function we want to return.
// This matches: int function(int, int)
typedef int (*OperationFunc)(int, int);

// 2. Define two simple functions that match that signature
int add(int a, int b) { 
  return a + b;
}

int multiply(int a, int b) { 
  return a * b; 
}

// 3. The "Factory" function
// It takes an integer 'type' and returns the appropriate function pointer
OperationFunc get_operation(int type) {
    if (type == 1) {
        return add;
    } else {
        return multiply;
    }
}

int main() {
    // Get the function from the factory
    OperationFunc my_op = get_operation(1); // Returns 'add'

    // Use the returned function
    int result = my_op(10, 5); 
    
    printf("Result: %d\n", result); // Output: 15
    return 0;
}
